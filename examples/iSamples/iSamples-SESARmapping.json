{
    "@schema": "../iSamplesSchemaBasicSMR.json",
    "@id":"suggest something like https://data.isamples.org/digitalsample/igsn/{igsn}",
    "label": "#/description/sampleName",
    "sampleidentifier": "igsn:{#/igsn}",
    "description": "#/description/description",
    "hasContextCategory": ["requires mapping; base on location type"],
    "hasMaterialCategory": ["requires mapping; base on material"],
    "hasSpecimenCategory": ["requires mapping; base on sample type"],
    "keywords": ["#/description/supplementMetadata/geologicalAge","#/description/supplementMetadata/fieldName"],
    "producedBy": {
        "label": "",
        "description": "#/description/collectionMethod & initiative: & #/description/supplementMetadata/cruiseFieldPrgrm & platform: & #/description/supplementMetadata/platformType",
        "hasFeatureOfInterest": "#/description/supplementMetadata/primaryLocationType",
        "responsibility": ["#/description/collector","#/description/contributors/0/contributor/0/name where ../roleName='Sample Owner',,Sample Owner"],
        "resultTime": "#/description/collectionStartDate",
        "samplingSite": {
            "description": "#/description/supplementMetadata/navigationType & #/description/supplementMetadata/locationDescription",
            "label": "",
            "location": {
                "elevation": "#/description/supplementMetadata/elevation",
                "latitude": "#/description/geoLocation/geo/0/latitude",
                "longitude": "#/description/geoLocation/geo/0/longitude"
            },
            "placeName": ["#/description/supplementMetadata/locality", "#/description/supplementMetadata/primaryLocationName", "#/description/supplementMetadata/province|city|county"]
        }
    },
    "registrant": "#/description/contributors/1/contributor//name where ../roleName = 'Sample Registrant'",
    "samplingPurpose": "#/description/supplementMetadata/purpose"
}